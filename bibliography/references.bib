  pmid = {26524513},
  keywords = {Amino Acid Substitution,Animals,Brain,Callithrix,Cell Line,Chlorocebus aethiops,CHO Cells,Cricetinae,Cricetulus,Fusion,Hemagglutinin,Humans,Measles virus,Neurovirulence,{Protein Structure, Tertiary},Subacute sclerosing panencephalitis,Subacute Sclerosing Panencephalitis,Vero Cells,Viral Fusion Proteins}
}

@article{ayataGeneOsaka2Strain2010,
  title = {The {{F}} Gene of the {{Osaka-2}} Strain of Measles Virus Derived from a Case of Subacute Sclerosing Panencephalitis Is a Major Determinant of Neurovirulence},
  author = {Ayata, Minoru and Takeuchi, Kaoru and Takeda, Makoto and Ohgimoto, Shinji and Kato, Seiichi and Sharma, Luna Bhatta and Tanaka, Miyuu and Kuwamura, Mitsuru and Ishida, Hiroshi and Ogura, Hisashi},
