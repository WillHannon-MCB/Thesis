@article{watanabeMutantFusionProteins2013,
  title = {Mutant {{Fusion Proteins}} with {{Enhanced Fusion Activity Promote Measles Virus Spread}} in {{Human Neuronal Cells}} and {{Brains}} of {{Suckling Hamsters}}},
  author = {Watanabe, Shumpei and Shirogane, Yuta and Suzuki, Satoshi O. and Ikegame, Satoshi and Koga, Ritsuko and Yanagi, Yusuke},
